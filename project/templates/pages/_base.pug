block vars
  - let pageTitle = [];

doctype html
html(lang='nl')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(http-equiv='X-UA-Compatible', content='IE=Edge,chrome=1')
    
    title #{pageTitle.join(' ')} - HAN.nl
    meta(http-equiv='cleartype', content='on')
    meta(name='author', content='Eight Media')
    meta(name='format-detection', content='telephone=no')

    //- preload js
    link(rel='preload', href=JS_URL + 'app.js', as='script')
    link(rel='preload', href=JS_URL + 'libs.js', as='script')

    link(rel='stylesheet', href=CSS_URL + 'theme.css')
    link(rel='stylesheet', href=CSS_URL + 'print.css', media='print')

  body

    include ../icons/_symbols

    block skiplinks
      .skiplinks
        a(href='#content') Direct naar de inhoud
        a(href='javascript:void(null)', class='js-menu-show') Direct naar de hoofdnavigatie
        a(href='javascript:void(null)', class='js-sitesearch-show') Direct naar de zoekfunctie

    block nav
      .nav-spacer(class='js-nav-spacer')
      .nav(class='js-nav')
        | topbar
        | subnab

    .main(role='main', id='content')
      block main

    block takeover

    block scripts
      script(src=JS_URL + 'libs.js', defer)
      script(src=JS_URL + 'app.js', defer)
