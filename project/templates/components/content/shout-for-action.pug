//- @pugdoc
  name: shout for action picture
  capture: 0
mixin shout-for-action-image(image)
  picture.shout__for__action__picture
    - var sizes = []
    - sizes.push({ minWidth: 1200, width: 560, ratio: 1 });
    - sizes.push({ minWidth: 1024, width: 430, ratio: 1 });
    - sizes.push({ minWidth: 768, width: 310, ratio: 2 });
    - sizes.push({ minWidth: 500, width: 310, ratio: 2 });
    - sizes.push({ minWidth: 1, width: 500, ratio: 2 });
    +srcset(image, sizes)

    img(src='', alt='')

