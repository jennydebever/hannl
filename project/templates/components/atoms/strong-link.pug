  name: Knop (Strong link)
  description: Strong link. Maximaal 30 karakters.
  examples:
    - 
      name: Knop (Strong link, op wit)
      example: |
        .demo-theme-white
          +strong-link('Gebruik het contactformulier', '/')
          +strong-link('Gebruik het contactformulier', 'https://www.han.nl')
    - 
      name: Knop (Strong link, op rood)
      example: |
        .demo-theme-red
          +strong-link('Gebruik het contactformulier', '/')
          +strong-link('Gebruik het contactformulier', 'https://www.han.nl')
    - 
      name: Knop (Strong link, op zwart)
      example: |
        .demo-theme-black
          +strong-link('Gebruik het contactformulier', '/')
          +strong-link('Gebruik het contactformulier', 'https://www.han.nl')

mixin strong-link(label, href, size)
  include ../../icons/_icon

  if size === SMALL
    - var cls = 'strong-link--small';

  a.strong-link(href=href, class=cls)
    span.strong-link__label #{label}
    if href.indexOf('http') > -1
      +icon#external
    else
      +icon#arrow
